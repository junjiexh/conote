# Database Configuration
POSTGRES_DB=conote
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend Configuration
# IMPORTANT: Change this in production! Must be at least 256 bits
# This secret must match the secret in kong/kong.yml for JWT validation
JWT_SECRET=your-secret-key-change-this-in-production-make-it-at-least-256-bits-long
JWT_EXPIRATION=86400000

# Authentication Mode
# Set to true to use Kong Gateway for authentication (recommended for production)
# Set to false for direct backend JWT authentication (local development without Kong)
USE_KONG_AUTH=true

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:80

# Frontend Configuration
# When using Kong (USE_KONG_AUTH=true), point to Kong proxy on port 8000
# When not using Kong (USE_KONG_AUTH=false), point to backend on port 8080
VITE_API_URL=http://localhost:8000
